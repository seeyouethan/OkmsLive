            </Image>
            <Label VerticalAlignment="Center" Content="区域演示" FontSize="12px" Foreground="#41A0EA" />
        </StackPanel>
            <StackPanel Height="30" Width="90" Orientation="Horizontal" MouseLeftButtonDown="LiveTypePanel2_MouseLeftButtonDown" MouseEnter="StackPanel_MouseEnter" MouseLeave="StackPanel_MouseLeave">
            <Image  Width="24" Height="24" Stretch="Fill"  Source="/Resources/software.png">
            </Image>
            <Label VerticalAlignment="Center" Content="软件演示" FontSize="12px" Foreground="#41A0EA" />
        </StackPanel>
            <StackPanel Height="30" Width="90" Orientation="Horizontal" MouseLeftButtonDown="LiveTypePanel3_MouseLeftButtonDown" MouseEnter="StackPanel_MouseEnter" MouseLeave="StackPanel_MouseLeave">
            <Image  Width="24" Height="24" Stretch="Fill"  Source="/Resources/computor.png">
            </Image>
            <Label VerticalAlignment="Center" Content="桌面演示" FontSize="12px" Foreground="#41A0EA" />
