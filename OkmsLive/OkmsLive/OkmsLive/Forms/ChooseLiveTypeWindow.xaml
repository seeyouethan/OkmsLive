        xmlns:local="clr-namespace:OkmsLive.Forms"
        mc:Ignorable="d"
        Title="LiveTypeWindow" Height="94" Width="94" WindowStyle="None" WindowState="Normal" ResizeMode="NoResize" ShowInTaskbar="False">
    <Border BorderBrush="#41A0EA" BorderThickness="2,2,2,2" Cursor="Hand">
    <StackPanel>
            <StackPanel Height="30" Width="90" Orientation="Horizontal" MouseLeftButtonDown="LiveTypePanel1_MouseLeftButtonDown" MouseEnter="StackPanel_MouseEnter" MouseLeave="StackPanel_MouseLeave">
