<Window x:Class="OkmsLive.Forms.ChooseCameraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OkmsLive.Forms"
        mc:Ignorable="d"
        Title="" Height="94" Width="94" WindowStyle="None" WindowState="Normal"  ResizeMode="NoResize" ShowInTaskbar="False" Loaded="Window_Loaded">
    <Border BorderBrush="#41A0EA" BorderThickness="2,2,2,2" Cursor="Hand">
        <StackPanel x:Name="CameraStackpanel">
            <StackPanel Height="30" Width="90" Orientation="Horizontal" HorizontalAlignment="Left">
                <RadioButton Margin="10,0,0,0" VerticalContentAlignment="Center" GroupName="Cameras" Click="RadioButton_Click">
                    <Label>无</Label>
                </RadioButton>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
